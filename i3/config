# start a terminal
bindsym $mod+Return exec --no-startup-id urxvt +sb -depth 32 -bg $urxvt_bg -fg $urxvt_fg -fn $urxvt_fn

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
