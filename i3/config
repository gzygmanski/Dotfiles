set $mod Mod4

for_window [class="^.*"] border pixel 0

set $gaps_inner 20
set $gaps_outer 5
set $gaps_inner_change 20
set $gaps_outer_change 5

gaps inner $gaps_inner
gaps outer $gaps_outer

bindsym $mod+Shift+z gaps inner all set 0, gaps outer all set 0
bindsym $mod+Shift+x gaps inner all set $gaps_inner, gaps outer all set $gaps_outer

bindsym $mod+bracketright gaps inner all plus $gaps_inner_change; gaps outer all plus $gaps_outer_change 
bindsym $mod+bracketleft gaps inner all minus $gaps_inner_change; gaps outer all minus $gaps_outer_change 

set $urxvt_fn "xft:Hack:pixelsize=14"
set $urxvt_bg rgba:0f0f/0f0f/0f0f/f0f0
set $urxvt_fg white


